<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="view" spacing="20.0" styleClass="panelBusqueda" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="nombreTextField" promptText="Nombre" />
      <VBox fx:id="busquedaCamposVbox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
         <children>
            <ComboBox fx:id="expansionCombo" maxWidth="1.7976931348623157E308" promptText="Expansión" styleClass="comboBox" />
            <ComboBox fx:id="claseCombo" maxWidth="1.7976931348623157E308" promptText="Clase" styleClass="comboBox" />
            <ComboBox fx:id="faccionCombo" maxWidth="1.7976931348623157E308" promptText="Facción" styleClass="comboBox" />
            <ComboBox fx:id="rarezaCombo" maxWidth="1.7976931348623157E308" promptText="Rareza" styleClass="comboBox" />
            <ComboBox fx:id="tipoCombo" maxWidth="1.7976931348623157E308" promptText="Tipo" styleClass="comboBox" />
            <ComboBox fx:id="razaCombo" maxWidth="1.7976931348623157E308" promptText="Raza" styleClass="comboBox" />
            <Label text="Ataque" />
            <TextField fx:id="ataqueTextField" />
            <Label text="Vida" />
            <TextField fx:id="vidaTextfield" />
            <Label text="Coste" />
            <TextField fx:id="costeTextField" />
         </children>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="buscarButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Buscar" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
