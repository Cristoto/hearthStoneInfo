<GridPane fx:id="view" alignment="BASELINE_CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints prefWidth="100.0" />
   </columnConstraints>
   <children>
      <TextField fx:id="usuarioTextField" promptText="Usuario" styleClass="camposInicio" GridPane.columnSpan="2" />
      <PasswordField fx:id="contraPassField" promptText="Contraseña" styleClass="camposInicio" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Button fx:id="entrarButton" defaultButton="true" mnemonicParsing="false" styleClass="botonesInicio" text="Entrar" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
      <Label styleClass="mensajeInicioLabel" text="¿No tienes una cuenta? Creala" GridPane.rowIndex="2" />
      <Hyperlink fx:id="crearLink" styleClass="linkRegistro" text="aquí" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </children>
</GridPane>
