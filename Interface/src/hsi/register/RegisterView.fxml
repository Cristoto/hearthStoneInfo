<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="view" alignment="BASELINE_CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints prefWidth="100.0" />
      <ColumnConstraints />
   </columnConstraints>
   <children>
      <TextField fx:id="usuarioTextField" promptText="Usuario" styleClass="camposInicio" GridPane.columnSpan="2" />
      <PasswordField fx:id="contraPassField" promptText="Contraseña" styleClass="camposInicio" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <PasswordField fx:id="repetirPassField" promptText="Repetir contraseña" styleClass="camposInicio" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <Button fx:id="crearButton" defaultButton="true" mnemonicParsing="false" text="Crear" />
            <Button fx:id="cancelarButton" cancelButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Cancelar" />
         </children>
      </HBox>
   </children>
</GridPane>
